  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:migrate:deploy": "npx prisma migrate deploy && npm run seed:prod && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:db": "docker-compose -f docker-compose.db.yml up -d",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "seed:local": "NODE_ENV=dev dotenv -e ./config/env/local.env node dist/seeder/seeder",
    "seed:refresh-local": "NODE_ENV=dev dotenv -e ./config/env/local.env node dist/seeder/seeder --refresh",
    "seed:prod": "NODE_ENV=prod node dist/seeder/seeder",
    "seed:refresh-prod": "NODE_ENV=prod node dist/seeder/seeder --refresh",
    "ssh": "doctl compute ssh $DROPLET_ID"
  },
